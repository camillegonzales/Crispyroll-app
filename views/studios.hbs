<body>
    <header>
        <nav>
            <div class="logo"><a href="index.html">CRISPYROLL</a></div>
            <div class="nav-links">
                <a href="users.html">Users</a>
                <a href="animes.html">Animes</a>
                <div class="highlight"><a href="studios.html">Studios</a></div>
                <a href="ratings.html">Ratings</a>
                <a href="users_animes.html">Users/Animes</a>
            </div>
        </nav>
    </header>
    <section>
        <h1>STUDIOS</h1>
        <div id="browse" style="display: block">
            <table id="studios-table" border="1" cellpadding="5">
                <thead>
                    <tr>
                        {{#each data.[0]}}
                        <th>{{@key}}</th>
                        {{/each}}
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each data}}
                    <tr data-value={{this.id}}>
                        <td>{{this.studio_id}}</td>
                        <td>{{this.studio_name}}</td>
                        <td>{{this.year_founded}}</td>
                        <td><button onclick="deleteStudio({{this.studio_id}})">Delete</button></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            <script src="/public/js/deleteStudio.js"></script>
            <p>&nbsp;</p>
        </div>
        <!--Insert-->
        <div id="insert" style="display: block">
            <form id="add-studio-form" method="POST" action="/add-studio-form">
                <legend><strong>Add Studios</strong></legend>
                <fieldset class="fields">
                    <label> Studio Name </label> <input type="text" name="studio_name">
                    <label> Year Founded </label> <input type="text" name="year_founded">
                    <div class="btn-container">
                        <input class="btn" type="submit" id="addStudio" value="Add a Studio">
                        <input class="btn" type="button" value="Cancel">
                    </div>
                </fieldset>
            </form>
        </div>
        <!--Update-->
        <p>&nbsp;</p>
        <div id="update" style="display: block">
            <form id="update-studio-form" method="PUT" action="/update-studio-form">
                <legend><strong>Update Studio</strong></legend>
                <fieldset class="fields">
                    <label for="input_studio_name"> Studio Name </label>
                    <select name="input_studio_name" id="mySelect">
                        <option value="test">Select a Studio</option>
                        {{#each data}}
                        <option value="{{this.studio_id}}">
                            {{this.studio_name}}
                        </option>
                        {{/each}}
                    </select>
                    <label for="input_year_founded"> Year Founded </label> <input type="number"
                        name="input_year_founded" id="year_founded_update">
                    <div class="btn-container">
                        <input class="btn" type="submit" id="updateStudio" value="Save Update Studio">
                        <input class="btn" type="button" value="Cancel">
                    </div>
                </fieldset>
            </form>
        </div><!-- update -->
    </section>
    <script src="/public/js/addStudio.js"></script>
    <script src="/public/js/updateStudio.js"></script>
</body>