<body>
    <header>
        <nav>
            <div class="logo"><a href="index.html">CRISPYROLL</a></div>
            <div class="nav-links">
                <a href="users.html">Users</a>
                <a href="animes.html">Animes</a>
                <div class="highlight"><a href="studios.html">Studios</a></div>
                <a href="ratings.html">Ratings</a>
                <a href="users_animes.html">Users/Animes</a>
            </div>
        </nav>
    </header>
    <section>
        <h1>STUDIOS</h1>
        <div id="browse" style="display: block">
            <table border="1" cellpadding="5">
                <thead>
                    <tr>
                        {{#each data.[0]}}
                        <th>{{@key}}</th>
                        {{/each}}
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each data}}
                    <tr>
                        <td>{{this.studio_id}}</td>
                        <td>{{this.studio_name}}</td>
                        <td>{{this.year_founded}}</td>
                        <td><button onclick="deleteStudio({{this.studio_id}})">Delete</button></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            <script src="./js/delete_studio.js"></script>
            <p>&nbsp;</p>
        </div>
        <!--Insert-->
        <div id="insert" style="display: block">
            <form id="add-studio-form-ajax">
                <legend><strong>Add Studios</strong></legend>
                <fieldset class="fields">
                    <label> Studio Name </label> <input type="text" name="name">
                    <label> Year Founded </label> <input type="text" name="year_founded">
                    <div class="btn-container">
                        <input class="btn" type="submit" id="addStudio" value="Add a Studio">
                        <input class="btn" type="button" value="Cancel">
                    </div>
                </fieldset>
            </form>
        </div>
        <!--Update-->
        <p>&nbsp;</p>
        <div id="update" style="display: block">
            <form id="update-studio-form-ajax">
                <legend><strong>Update Studio</strong></legend>
                <fieldset class="fields">
                    <label for="input_studio_name"> Studio Name </label>
                    <select name="input_studio_name" id="mySelect">
                        <option value="test">Select a Studio</option>
                        {{#each data}}
                        <option value="{{this.studio_id}}">
                            {{this.studio_name}}
                        </option>
                        {{/each}}
                    </select>
                    <label> Year Founded </label> <input type="number" name="yearFounded">
                    <div class="btn-container">
                        <input class="btn" type="submit" id="UpdateSaveStudio" value="Save Update Studio">
                        <input class="btn" type="button" value="Cancel">
                    </div>
                </fieldset>
            </form>
        </div><!-- update -->
    </section>
    <script src="./js/addStudio"></script>
    <script src="./js/updateStudio"></script>
    <script src="./js/deleteStudio"></script>
</body>
