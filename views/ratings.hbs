<body>
    <header>
        <nav>
            <div class="logo"><a href="index.html">CRISPYROLL</a></div>
            <div class="nav-links">
                <a href="users.html">Users</a>
                <a href="animes.html">Animes</a>
                <a href="studios.html">Studios</a>
                <div class="highlight"><a href="ratings.html">Ratings</a></div>
                <a href="users_animes.html">Users/Animes</a>
            </div>
        </nav>
    </header>

    <section>
        <h1>RATINGS</h1>
        <!-- Ratings table -->
        <table id="ratings-table" border="1" cellpadding="5">
            <thead>
                <tr>
                    {{#each data.[0]}}
                    <th>{{@key}}</th>
                    {{/each}}
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                {{#each data}}
                <tr data-value={{this.rating_id}}>
                    <td>{{this.user_id}}</td>
                    <td>{{this.anime_id}}</td>
                    <td>{{this.rating}}</td>
                    <td>{{this.review}}</td>
                    <td><button onclick="deleteReview({{this.review_id}})">Delete</button></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        <script src="./js/deleteReview.js"></script>
        <p>&nbsp;</p>

        <!--Insert-->
        <form id="addRating">
            <legend><strong>Add Rating</strong></legend>
            <fieldset class="fields">
                <label> User </label>
                <select name="user" id="user">
                    <option value="none" selected disabled hidden>Select User</option>
                    <option value="1">Honestliz</option>
                    <option value="2">Serexolik</option>
                    <option value="3">Pebbles44</option>
                    <option value="4">PeppermintP</option>
                    <option value="5">wstr000</option>
                    <option value="NULL">NULL</option>
                </select>
                <label> Anime </label> <input type="text" name="anime">
                <label> Rating </label> <input type="number" name="rating">
                <label> Review </label> <input type="text" name="review">
                <div class="btn-container">
                    <input class="btn" type="submit" id="addRating" value="Add a Rating">
                    <input class="btn" type="button" value="Cancel">
                </div>
            </fieldset>
            
        </form>

        <!--Update-->
        <p>&nbsp;</p>
        <form id="updateRating">
            <legend><strong>Update Rating</strong></legend>
            <fieldset class="fields">
                <label> User </label>
                <select name="user" id="user">
                    <option value="none" selected disabled hidden>Select User</option>
                    <option value="1">Honestliz</option>
                    <option value="2">Serexolik</option>
                    <option value="3">Pebbles44</option>
                    <option value="4">PeppermintP</option>
                    <option value="5">wstr000</option>
                    <option value="NULL">NULL</option>
                </select>
                <label> Anime </label> <input type="text" name="anime">
                <label> Rating </label> <input type="number" name="rating">
                <label> Review </label> <input type="text" name="review">
                <div class="btn-container">
                    <input class="btn" type="submit" id="UpdateSaveRating" value="Save Update Rating">
                    <input class="btn" type="button" value="Cancel">
                </div>
            </fieldset>
        </form>
    </section>
</body>
